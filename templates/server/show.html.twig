{% extends 'base.html.twig' %}

{% block title %}Server{% endblock %}

{% block body %}
    <h1>Server</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ server.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ server.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ server.description }}</td>
            </tr>
            <tr>
                <th>Online</th>
                <td>{{ server.online ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>GamePort</th>
                <td>{{ server.gamePort }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ server.createdAt ? server.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('server_index') }}">back to list</a>

    <a href="{{ path('server_edit', {'id': server.id}) }}">edit</a>

    {{ include('server/_delete_form.html.twig') }}
{% endblock %}

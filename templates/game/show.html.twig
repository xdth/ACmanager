{% extends 'base.html.twig' %}

{% block title %}Game{% endblock %}

{% block body %}

<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Home</a></li>
    <li class="breadcrumb-item"><a href="{{ path('game_index') }}">Games</a></li>
    <li class="breadcrumb-item active" aria-current="page">{{ game.name }}</li>
  </ol>
</nav>


  <div class="row">
    <div class="col-sm-8">
        <h1>{{ game.name }}</h1>
    </div>
    <div class="col-sm-4">
        <a class="btn btn-dark float-right" style="margin-left:10px;" role="button" href="{{ path('game_index') }}">Back to list</a>
        {% if (is_granted('ROLE_ADMIN')) %}
          {{ include('game/_delete_form.html.twig') }}
          <a class="btn btn-dark float-right" style="margin-right:10px;" href="{{ path('game_edit', {'id': game.id}) }}">Edit</a>
        {% endif %}  
    </div>
   </div> <!-- /.row -->

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ game.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ game.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ game.description }}</td>
            </tr>
            <!-- tr>
                <th>GameFilename</th>
                <td>{{ game.gameFilename }}</td>
            </tr -->
        </tbody>
    </table>
    
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Edit Game{% endblock %}

{% block body %}

{# if not admin, don't show #}
{% if (not is_granted('ROLE_ADMIN')) %}
Unauthorized
{% else %} {# if not admin, don't show #}


<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Home</a></li>
    <li class="breadcrumb-item"><a href="{{ path('game_index') }}">Games</a></li>
    <li class="breadcrumb-item active" aria-current="page">{{ game.name }}</li>
  </ol>
</nav>


  <div class="row">
    <div class="col-sm-8">
        <h1>Edit Game</h1>
    </div>
    <div class="col-sm-4">
        <a class="btn btn-dark float-right" style="margin-left:10px;" role="button" href="{{ path('game_index') }}">Back to list</a>
        {{ include('game/_delete_form.html.twig') }}
    </div>
   </div> <!-- /.row -->
   

{{ form_start(form) }}
    <div class="my-custom-class-for-errors">
        {{ form_errors(form) }}
    </div>

  <div class="form-group">
    {{ form_row(form.name, {'attr': {'required': true}}) }}
  </div>
  <div class="form-group">
    {{ form_row(form.description) }}
  </div>
  <div class="form-group">
    {{ form_row(form.gameFilename, {'attr': {'required': false}}) }}
  </div>

  <div class="row">
    <div class="col-sm-2">

        {{ form_widget(form.submit, {'attr': {'class': 'btn btn-dark'}}) }}

        {{ form_rest(form) }}

        {{ form_end(form) }}

    </div> <!-- col -->
    <div class="col-sm-10">
    </div> <!-- col -->
   </div>
   <!-- /.row -->

{% endif %} {# if not admin, don't show #}
{% endblock %}
